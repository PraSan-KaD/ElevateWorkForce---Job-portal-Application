@model ElevateWorkForce.Models.JobDetailsDto

@{
    ViewData["Title"] = "Create";
}

<div class="jobtype-container">
    <div class="jobtype-header">
        <h2>Create Job Listing</h2>
    </div>

    <form asp-action="Create" class="jobtype-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="JobTitle" class="control-label"></label>
            <input asp-for="JobTitle" class="form-control" />
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ComapnayId" class="control-label"></label>
            <select asp-for="ComapnayId" class="form-control" asp-items="ViewBag.ComapnayId"></select>
        </div>

        <div class="form-group">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
        </div>

        <div class="form-group">
            <label asp-for="JobTypeId" class="control-label"></label>
            <select asp-for="JobTypeId" class="form-control" asp-items="ViewBag.JobTypeId"></select>
        </div>

        <div class="form-group">
            <label asp-for="VacancyNo" class="control-label"></label>
            <input asp-for="VacancyNo" class="form-control" />
            <span asp-validation-for="VacancyNo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="JobLevel" class="control-label"></label>
            <input asp-for="JobLevel" class="form-control" />
            <span asp-validation-for="JobLevel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="JobLocation" class="control-label"></label>
            <input asp-for="JobLocation" class="form-control" />
            <span asp-validation-for="JobLocation" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OfferedSalary" class="control-label"></label>
            <input asp-for="OfferedSalary" class="form-control" />
            <span asp-validation-for="OfferedSalary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DeadLine" class="control-label"></label>
            <input asp-for="DeadLine" class="form-control" />
            <span asp-validation-for="DeadLine" class="text-danger"></span>
        </div>

     




        <div class="form-group"> 
             <label asp-for="EducationLevel" class="control-label"></label> 
            <input asp-for="EducationLevel" class="form-control" /> 
             <span asp-validation-for="EducationLevel" class="text-danger"></span> 
         </div>

        <div class="form-group">
            <label asp-for="ExperienceRequired" class="control-label"></label>
            <input asp-for="ExperienceRequired" class="form-control" />
            <span asp-validation-for="ExperienceRequired" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OtherSpecification" class="control-label"></label>
            <input asp-for="OtherSpecification" class="form-control" />
            <span asp-validation-for="OtherSpecification" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="JobWorkDescription" class="control-label"></label>
            <input asp-for="JobWorkDescription" class="form-control" />
            <span asp-validation-for="JobWorkDescription" class="text-danger"></span>
        </div>

        <div class="jobtype-actions">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
