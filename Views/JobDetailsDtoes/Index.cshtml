@model IEnumerable<ElevateWorkForce.Models.JobDetailsDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="jobtype-header">Job Details</h1>

<p>
    <a asp-action="Create" class="btn-primary" style="color: white; text-decoration: none; display: inline-block;">Create New</a>
</p>

<div class="jobtype-container" style="max-width: 1100px; overflow-x: auto;">
    <table class="jobtype-table" style="width: 100%; ">
        <thead>
            <tr>
                <th style="width: 15%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.JobTitle)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.VacancyNo)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.JobLevel)</th>
                <th style="width: 15%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.JobLocation)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.OfferedSalary)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.DeadLine)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.EducationLevel)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.ExperienceRequired)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.OtherSpecification)</th>
                <th style="width: 15%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.JobWorkDescription)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.EmployerDetails)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.JobCategory)</th>
                <th style="width: 10%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Html.DisplayNameFor(model => model.JobType)</th>
                <th style="width: 5%; white-space: nowrap;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="word-wrap: break-word;">@Html.DisplayFor(modelItem => item.JobTitle)</td>
                    <td>@Html.DisplayFor(modelItem => item.VacancyNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.JobLevel)</td>
                    <td style="word-wrap: break-word;">@Html.DisplayFor(modelItem => item.JobLocation)</td>
                    <td>@Html.DisplayFor(modelItem => item.OfferedSalary)</td>
                    <td>@Html.DisplayFor(modelItem => item.DeadLine)</td>
                    <td>@Html.DisplayFor(modelItem => item.EducationLevel)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExperienceRequired)</td>
                    <td style="word-wrap: break-word;">@Html.DisplayFor(modelItem => item.OtherSpecification)</td>
                    <td style="word-wrap: break-word;">@Html.DisplayFor(modelItem => item.JobWorkDescription)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmployerDetails.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.JobCategory.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.JobType.Id)</td>
                    <td class="action-links" style="white-space: nowrap;">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" style="color: #e53e3e;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
