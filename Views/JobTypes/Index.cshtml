@model IEnumerable<ElevateWorkForce.Models.JobType>

@{
    ViewData["Title"] = "Job Types";
}

<div class="jobtype-container">
    <div class="jobtype-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>Job Types</h2>
                <p class="text-muted">Manage all job types in the system</p>
            </div>
            <a asp-action="Create" class="btn btn-primary">
                <i class="mdi mdi-plus"></i> Create New
            </a>
        </div>
    </div>

    <table class="jobtype-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <div class="action-links">
                            <a asp-action="Edit" asp-route-id="@item.Id">
                                <i class="mdi mdi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id">
                                <i class="mdi mdi-eye"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">
                                <i class="mdi mdi-delete"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>